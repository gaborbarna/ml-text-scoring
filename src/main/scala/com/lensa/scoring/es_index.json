{
    "mappings": {
	"document": {
	    "properties": {
		"text": {
		    "type": "string",
		    "term_vector": "with_positions_offsets_payloads",
		    "store" : true,
		    "index_analyzer" : "fulltext_analyzer"
		},
		"score": {
		    "type": "integer",
		}
	    }
	}
    },
    "settings" : {
	"index" : {
	    "number_of_shards" : 1,
	    "number_of_replicas" : 0
	},
	"analysis": {
	    "analyzer": {
		"fulltext_analyzer": {
		    "type": "custom",
		    "tokenizer": "whitespace",
		    "filter": [
			"lowercase",
			"type_as_payload"
		    ]
		}
	    }
	}
    }
}
